set $mod Mod4
set $term wezterm
set $menu wofi --show drun -O alphabetical

bindsym $mod+1 exec $term
bindsym $mod+2 exec flatpak run org.mozilla.firefox
bindsym $mod+3 exec flatpak run org.mozilla.Thunderbird
bindsym $mod+4 exec flatpak run com.spotify.Client --no-zygote

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left 50px
bindsym $mod+Shift+j move down 50px
bindsym $mod+Shift+k move up 50px
bindsym $mod+Shift+l move right 50px
bindsym $mod+Shift+0 move position center

bindsym $mod+minus resize shrink height 50px
bindsym $mod+equal resize grow height 50px
bindsym $mod+comma resize shrink width 50px
bindsym $mod+period resize grow width 50px
bindsym $mod+0 resize set width 100ppt height 100ppt

bindsym $mod+control+1 workspace number 1
bindsym $mod+control+2 workspace number 2
bindsym $mod+control+3 workspace number 3
bindsym $mod+control+4 workspace number 4
bindsym $mod+control+5 workspace number 5

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5

set $WOB_VOLUME_SOCK $XDG_RUNTIME_DIR/wob_volume.sock
exec_always rm -f $WOB_VOLUME_SOCK && \
   mkfifo $WOB_VOLUME_SOCK && \
   tail -f $WOB_VOLUME_SOCK | \
   wob -a "top" -a "right" --bar-color "#16a34aFF" --background-color "#3F3F30FF" -H 20 -b 1 --border-color "#86efacFF" -p 0 -M 10
bindsym XF86AudioRaiseVolume exec pamixer -ui 5 && \
   pamixer --get-volume > $WOB_VOLUME_SOCK
bindsym XF86AudioLowerVolume exec pamixer -ud 5 && \
   pamixer --get-volume > $WOB_VOLUME_SOCK
bindsym XF86AudioMute exec pamixer --toggle-mute && \
   ($(pamixer --get-mute) == true && \
   echo 0 > $WOB_VOLUME_SOCK) || \
   pamixer --get-volume > $WOB_VOLUME_SOCK
bindsym XF86AudioStop exec playerctl --all-players stop
bindsym XF86AudioPlay exec playerctl --all-players play-pause
bindsym XF86AudioNext exec playerctl --all-players next
bindsym XF86AudioPrev exec playerctl --all-players previous
bindsym XF86AudioMicMute exec pamixer --default-source -t

bindsym XF86MonBrightnessUp exec brillo -q -A 5
bindsym XF86MonBrightnessDown exec brillo -q -U 5

bindsym Print exec grim
bindsym $mod+Print exec slurp | grim -g -

bindsym $mod+d exec $menu
bindsym $mod+s exec wlogout
bindsym $mod+w kill
bindsym $mod+v exec clipman pick -t wofi
bindsym $mod+r reload
bindsym $mod+f fullscreen
bindsym $mod+g floating toggle
bindsym $mod+t layout tabbed
bindsym $mod+Shift+c splith
bindsym $mod+Shift+r splitv

